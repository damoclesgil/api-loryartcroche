{
  "kind": "collectionType",
  "collectionName": "produtos",
  "info": {
    "singularName": "produto",
    "pluralName": "produtos",
    "displayName": "Produtos",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "nome"
    },
    "galeria": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "imagem_destaque": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "preco": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "cor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "nomeCor": {
      "type": "enumeration",
      "enum": [
        "Rosa",
        "Azul",
        "Vermelho",
        "Branco",
        "Laranja",
        "Verde"
      ]
    },
    "produtosReferentes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::produto.produto"
    },
    "descricao": {
      "type": "customField",
      "options": {
        "preset": "blockBalloon"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    }
  }
}
